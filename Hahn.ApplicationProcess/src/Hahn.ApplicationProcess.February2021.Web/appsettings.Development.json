{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs//log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "KHahnApplicationProcessDatabase": "Server=(localdb)\\mssqllocaldb;Database=HahnApplicationProcess;Trusted_Connection=True;"
  }
}
